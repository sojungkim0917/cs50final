<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs50final.com.cs50final.ABCMain"
    android:background="@drawable/myabcflashcards">

    <ImageButton
        android:id="@+id/b_flashcards"
        android:layout_width="339dp"
        android:layout_height="102dp"
        android:layout_marginBottom="124dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:onClick="goToFlashcard_Lit"
        android:padding="13dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/flashcards" />

    <ImageButton
        android:id="@+id/b_test"
        android:layout_width="326dp"
        android:layout_height="95dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:onClick="goToLiteracy"
        android:padding="13dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/play" />

    <ImageButton
        android:id="@+id/b_home"
        android:layout_width="72dp"
        android:layout_height="53dp"
        android:layout_marginBottom="247dp"
        android:layout_marginRight="272dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="goToABCMain"
        android:scaleType="fitCenter"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/learnplay1" />


</android.support.constraint.ConstraintLayout>
