<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs50final.com.cs50final.Homepage"
    android:background="@drawable/learnplay">

    <ImageButton
        android:id="@+id/b_lithome"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="410dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:cropToPadding="true"
        android:onClick="goToLiteracyHome"
        android:padding="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b_mathhome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_button" />

    <ImageButton
        android:id="@+id/b_mathhome"
        android:layout_width="160dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="410dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:onClick="goToMath"
        android:padding="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b_lithome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@drawable/b123" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:layout_marginRight="58dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="219dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/b_mathhome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emoji_welcome" />
</android.support.constraint.ConstraintLayout>
